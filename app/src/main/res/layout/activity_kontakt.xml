<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KontaktActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/app_bar"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textContactUs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/pacifico"
        android:gravity="center"
        android:text="Skontaktuj siÄ™ z nami:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <TextView
        android:id="@+id/textPhoneNr"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/pacifico"
        android:gravity="center"
        android:text="1234567890"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textContactUs"
        app:layout_constraintStart_toStartOf="@+id/textContactUs"
        app:layout_constraintTop_toBottomOf="@+id/textContactUs" />

    <ImageView
        android:id="@+id/imageCallUs"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/textPhoneNr"
        app:layout_constraintStart_toStartOf="@+id/textPhoneNr"
        app:layout_constraintTop_toBottomOf="@+id/textPhoneNr"
        app:srcCompat="@drawable/ic_call_us" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/pacifico"
        android:gravity="center"
        android:text="tuitam@gmail.com"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textContactUs"
        app:layout_constraintStart_toStartOf="@+id/textContactUs"
        app:layout_constraintTop_toBottomOf="@+id/imageCallUs" />

    <ImageView
        android:id="@+id/sendMail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/textEmail"
        app:layout_constraintStart_toStartOf="@+id/textEmail"
        app:layout_constraintTop_toBottomOf="@+id/textEmail"
        app:srcCompat="@drawable/ic_send_mail" />
</androidx.constraintlayout.widget.ConstraintLayout>